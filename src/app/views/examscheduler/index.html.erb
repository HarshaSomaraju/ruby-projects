<div class="container-fluid">
    <div class="row">
        <div class="col-md-12">
            <h1>Your Exam Schedule for this Semester</h1>
            <% if current_user.is_admin? %>
              <%= link_to "<button class='btn btn-primary' type='button'>Admin View</button>".html_safe, examscheduler_admin_path %>
            <% end %>
            <hr>
            <table class="table">
                <thead>
                <tr>
                    <th scope="col">#</th>
                    <th scope="col">CourseId</th>
                    <th scope="col">RoomId</th>
                    <th scope="col">StartTime</th>
                    <th scope="col">EndTime</th>
                </tr>
                </thead>
                <tbody>
                <% @schedules.each_with_index do | s,index | %>
                    <tr>
                      <th scope="row"> <%= index+1 %></th>
                    <% if @schedules %>
                        <td><%= s.course.course_name %></td>
                        <td><%= s.room.room_name %></td>
                        <td><%= s.start_time %></td>
                        <td><%= s.end_time %></td>
                    <% else %>
                        Display none
                    <% end %>
                    </tr>
                <% end %>
                </tbody>
            </table>
        </div>
    </div>
</div>